[flake8]
select = ANN,B,B9,BLK,C,D,E,F,I,S,W
docstring-convention = google
ignore = E203,W503
max-line-length = 79
application_import_names =
    my_hypermodern_python
    tests
import-order-style = google
per-file-ignores =
    tests/*:S101,ANN
    noxfile.py:ANN
exclude = .git,.history,.venv,.nox
